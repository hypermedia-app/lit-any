{
    "extends": "airbnb-base",
    "root": true,
    "rules": {
        "no-console": 0,
        "indent": [ "error", 4, { "SwitchCase": 1 } ],
        "no-underscore-dangle": "off",
        "no-trailing-spaces":"error"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "plugins": [
        "jasmine",
        "sinon",
        "chai"
    ],
    "env": {
        "jasmine": true,
        "browser": true,
        "mocha": true
    },
    "globals": {
        "testHandler": true,
        "sinon": true,
        "fixture": true,
        "Polymer": true
    }
}
