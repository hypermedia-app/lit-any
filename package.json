{
  "private": true,
  "name": "lit-any",
  "workspaces": [
    "lit-any",
    "components/*",
    "test",
    "storybook"
  ],
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "yarn lint && lerna run --scope tests test:es5:bs",
    "test:local": "yarn lint && lerna run --scope tests test:local",
    "lint": "lerna run lint",
    "storybook": "lerna run --scope storybook storybook",
    "build-storybook": "lerna run --scope storybook build-storybook"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^0.4.5",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-plugin-chai": "0.0.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jasmine": "^2.8.4",
    "eslint-plugin-lit": "^1.0.0",
    "eslint-plugin-mocha": "^5.1.0",
    "eslint-plugin-sinon": "^0.2.0",
    "lerna": "^2.11.0",
    "standard": "^12.0.1",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "eslint-import-resolver-lerna": "^1.1.0"
  }
}
